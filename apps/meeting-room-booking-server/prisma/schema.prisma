datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  capacity  Int?
  location  String?
  bookings  Booking[]
}

model Booking {
  id        String             @id @default(cuid())
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  startTime DateTime?
  endTime   DateTime?
  status    EnumBookingStatus?
  user      User?              @relation(fields: [userId], references: [id])
  userId    String?
  room      Room?              @relation(fields: [roomId], references: [id])
  roomId    String?
}

model User {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  firstName String?
  lastName  String?
  username  String        @unique
  email     String?       @unique
  password  String
  roles     Json
  name      String?
  role      EnumUserRole?
  bookings  Booking[]
}

enum EnumBookingStatus {
  Option1
}

enum EnumUserRole {
  Option1
}
